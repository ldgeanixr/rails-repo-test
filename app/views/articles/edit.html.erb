<h1>Edit existing article</h1>

<% if @article.errors.any? %> <!-- check if @article has any errors -->
<h2>The following errors prevented the article from getting created</h2>
<ul>
	<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
</ul>

<% end %>
<% end %>

<%= form_for @article do |f| %> <!-- works with passed object article form the edit method in the article controller -->
<p>
	<%= f.label :title %><br>
	<%= f.text_field :title%>   <!--fill the title, add errors if validations are not passed-->
</p>

<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %> <!--fill the description-->
</p>

<p>
	<%= f.submit %> <!--sends data to the create action to handle (params with updated attributes)-->
</p>

<% end %>
<%= link_to "Back to articles listing", articles_path %>
