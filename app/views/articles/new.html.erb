<h1>Create an article</h1>

<% if @article.errors.any? %>  <!-- if article is not getting created, display the errors	-->
<h2>The following errors prevented the article from getting created</h2>
<ul>
	<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %></li> <!-- li tag because you might have several errors -->
</ul>

<% end %>
<% end %>

<%= form_for @article do |f| %>
<p>
	<%= f.label :title %><br>
	<%= f.text_field :title%>
</p>

<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
</p>

<p>
	<%= f.submit %> <!--sends data to the create action to handle-->
</p>

<% end %>

<%= link_to "Back to articles listing", articles_path %>
